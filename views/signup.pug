extends layout

block content
  div.row.vh-100.d-flex.justify-content-center.align-items-center
    form.border.rounded.shadow.p-3.m-3.col-lg-4.col-md-6.col-sm-8.col-10(method="post" autocomplete="off")
      h3.text-center.border-bottom.mb-3.pb-3.text-primary Sign Up
      if signupSuccess
        div.alert.alert-success.m-0.text-center.mb-3
          span.text-success #{signupSuccess}
      if signupErr
        div.alert.alert-danger.m-0.text-center.mb-3
          span.text-danger #{signupErr}
      div.form-group.mb-3
        label.form-label.m-0.position-absolute(for='name') Name
        i.fa-solid.fa-user.text-secondary
        input.form-control.border-0.border-bottom.rounded-0(type='text' name='firstname' value=val.firstname placeholder='Enter your name...')
      div.form-group.mb-3
        label.form-label.m-0.position-absolute(for='lastname') Lastname
        i.fa-solid.fa-user.text-secondary
        input.form-control.border-0.border-bottom.rounded-0(type='text' name='lastname' value=val.lastname placeholder='Enter your lastname...')
      div.form-group.mb-3
        label.form-label.m-0.position-absolute(for='email') Email
        i.fa-solid.fa-envelope.text-secondary
        input.form-control.border-0.border-bottom.rounded-0(type='email' name='email' value=val.email placeholder='Enter your email...')
      div.form-group.mb-3
        label.form-label.m-0.position-absolute(for='password') Password
        i.fa-solid.fa-lock.text-secondary
        input.form-control.border-0.border-bottom.rounded-0(type='password' name='password' value=val.password placeholder='Enter your password...')
      input.btn.btn-primary.col-12.my-3(type='submit' value="Sign up")
      div.col-12.text-center.text-secondary
        span Already have an account? Sign in 
          a.text-decoration-none(href="/signin") here.